<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/description"
        android:src="@mipmap/jato" />

    <TextView
        android:id="@+id/textoSimular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="@string/orcamento"
        android:textColor="#4CAF50"
        android:textSize="32sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textoSimular"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:autofillHints="@string/nome"
        android:backgroundTint="@color/backTint"
        android:hint="@string/nome"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/telefone"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textoSimular"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:autofillHints="@string/telefone"
        android:backgroundTint="@color/backTint"
        android:hint="@string/telefone"
        android:inputType="phone" />

    <View
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/telefone"
        android:layout_marginTop="20dp"
        android:background="@color/backView" />

    <Spinner
        android:id="@+id/spinner_cidade"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_one"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/endereco"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_one"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:autofillHints="@string/endereco_entrega"
        android:backgroundTint="@color/backTint"
        android:hint="@string/endereco_entrega"
        android:inputType="textPostalAddress" />

    <View
        android:id="@+id/view_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/endereco"
        android:layout_marginTop="20dp"
        android:background="@color/backView" />

    <Spinner
        android:id="@+id/spinner_marca"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_two"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/quantidade"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_two"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:autofillHints="@string/quantidade"
        android:backgroundTint="@color/backTint"
        android:hint="@string/quantidade"
        android:inputType="number" />
    <Button
        android:id="@+id/botaoSimular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantidade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#4CAF50"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="10dp"
        android:text="@string/simular"
        android:textColor="#f6f6f6"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>